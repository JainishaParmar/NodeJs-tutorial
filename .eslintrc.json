{
  "env": {
      "es2021": true,
      "node": true
  },
  "extends": ["plugin:prettier/recommended", "airbnb-base"],
  "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
  },
  "plugins": ["prettier", "spellcheck"],
  "rules": {
    "quotes": "off",
    "new-cap":"off",
    "no-unused-vars":"off",
    "no-console":"off",
    "spellcheck/spell-checker": [2,
      {
          "comments": true,
          "strings": true,
          "identifiers": true,
          "templates": true,
          "lang": "en_US",
          "skipWords": [
              "dict",
              "aff",
              "hunspellchecker",
              "hunspell",
              "utils",
              "yaml",
              "yamljs",
              "morgan",
              "req",
              "urlencoded",
              "addr",
              "syscall",
              "__dirname",
              "mangoose",
              "mongodb",
              "localhost",
              "successfull"
          ],
          "skipIfMatch": [
              "http://[^s]*",
              "^[-\\w]+\/[-\\w\\.]+$"
          ],
          "skipWordIfMatch": [
              "^foobar.*$"
          ],
          "minLength": 3
       }
   ]
  },
  "overrides": [
    {
      "files": ["*.yaml", "*.yml"],
      "parser": "yaml-eslint-parser"
    }
  ]
}
